# Environment Configuration
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=production

# FIRMS API Key
# Get your key from: https://firms.modaps.eosdis.nasa.gov/api/area/
FIRMS_MAP_KEY=your_firms_api_key_here

# Database Configuration
DB_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://hazeuser:your_secure_password_here@db:5432/haze_prediction

# API Configuration (optional)
API_RATE_LIMIT=60/minute

# Logging
LOG_LEVEL=INFO

# Satellite Selection
# Options: MODIS_NRT (recommended), VIIRS_SNPP_NRT, VIIRS_NOAA20_NRT
FIRMS_SATELLITE=MODIS_NRT

# Historical Fire Data Directory
# Options: FIRM_MODIS, FIRMS_VIIRS-SNPP, FIRMS_historical
FIRE_DATA_SOURCE=FIRM_MODIS
